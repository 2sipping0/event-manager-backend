<%- include('./partials/head') %>
<%- include('./partials/nav', {page: 'contact'}) %>

<div class="container mt-5">
  <h1>Contact Us</h1>
  
  <div class="row mt-4">
    <div class="col-md-6">
      <form>
        <div class="form-group">
          <label class="form-label" for="name">Your Name</label>
          <input type="text" class="form-control" id="name" name="name" required>
        </div>
        
        <div class="form-group mt-3">
          <label class="form-label" for="email">Email Address</label>
          <input type="email" class="form-control" id="email" name="email" required>
        </div>
        
        <div class="form-group mt-3">
          <label class="form-label" for="subject">Subject</label>
          <input type="text" class="form-control" id="subject" name="subject" required>
        </div>
        
        <div class="form-group mt-3">
          <label class="form-label" for="message">Message</label>
          <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
        </div>
        
        <button type="submit" class="btn btn-primary mt-4">Send Message</button>
      </form>
    </div>
    
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Contact Information</h5>
          <p><strong>Address:</strong> 1a Babani Street, Lagos, Nigeria</p>
          <p><strong>Email:</strong> info@tinkoevents.com</p>
          <p><strong>Phone:</strong> 08039836659</p>
          <p><strong>Business Hours:</strong> Monday - Friday, 9:00 AM - 5:00 PM</p>
          
          <div class="mt-4">
            <h6>Connect With Us</h6>
            <div class="social-icons">
              <a href="#"><i class="fab fa-facebook-f"></i></a>
              <a href="#"><i class="fab fa-twitter"></i></a>
              <a href="#"><i class="fab fa-instagram"></i></a>
              <a href="#"><i class="fab fa-linkedin-in"></i></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>