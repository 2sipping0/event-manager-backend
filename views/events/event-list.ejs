<%- include('../partials/head') %>
<%- include('../partials/nav', {page: 'events'}) %>

<div class="container my-5">
  <h1>All Events</h1>
  <div class="row">
    <% if (events && events.length > 0) { %>
      <% events.forEach(event => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= event.name %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= event.date %></h6>
              <p class="card-text">Location: <%= event.location %></p>
              <a href="/events/<%= event.id %>" class="btn btn-sm btn-primary">View Details</a>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col-12">
        <p>No events found. <a href="/events/create">Create one</a>!</p>
      </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>